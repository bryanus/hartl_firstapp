<h1>list of all users:</h1>

<ul>
	<% @users.each do |user| %>
		<li><%= user.name %>, <%= user.email %> 
			<%= link_to 'Edit', edit_user_path(user) %>
			<%= link_to 'Show', user_path(user) %>
			<%= link_to 'Delete', user, :confirm => 'Are you sure?',
:method => :delete %>
		</li>

	<% end %>
</ul>

<%= link_to "Create User", new_user_path %>